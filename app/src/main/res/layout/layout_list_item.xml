<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:padding="@dimen/padding_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/list_item_tv_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:padding="@dimen/padding_normal"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/list_item_divider3"
            style="@style/Divider.Horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_item_tv_company_name" />

        <TextView
            android:id="@+id/list_item_tv_recruitment_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="@dimen/padding_normal"
            android:drawableStart="@drawable/ic_time"
            android:padding="@dimen/padding_small"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/list_item_btn_apply"
            app:layout_constraintTop_toBottomOf="@id/list_item_divider3" />

        <TextView
            android:id="@+id/list_item_tv_deadline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:drawableLeft="@drawable/ic_time_deadline"
            android:drawablePadding="@dimen/padding_normal"
            android:drawableStart="@drawable/ic_time_deadline"
            android:padding="@dimen/padding_small"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/list_item_btn_apply"
            app:layout_constraintTop_toBottomOf="@id/list_item_tv_recruitment_date" />

        <View
            android:id="@+id/list_item_divider1"
            style="@style/Divider.Vertical"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            app:layout_constraintBottom_toTopOf="@id/list_item_divider2"
            app:layout_constraintLeft_toRightOf="@id/list_item_tv_recruitment_date"
            app:layout_constraintTop_toBottomOf="@id/list_item_tv_company_name" />

        <Button
            android:id="@+id/list_item_btn_apply"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="0px"
            android:text="@string/apply"
            android:textColor="@color/blue"
            app:layout_constraintBottom_toTopOf="@id/list_item_divider2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/list_item_divider1"
            app:layout_constraintTop_toBottomOf="@id/list_item_tv_company_name" />

        <View
            android:id="@+id/list_item_divider2"
            style="@style/Divider.Horizontal"
            android:layout_marginTop="@dimen/margin_normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_item_tv_deadline" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>